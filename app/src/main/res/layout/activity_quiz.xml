<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.project.yaku.presentation.view.Quiz.QuizActivity"
    android:background="@color/colorPrimaryDark">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_xs"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2">

                        <ImageView
                            android:layout_width="@dimen/image_height"
                            android:layout_height="@dimen/image_height"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/margin_xs"
                            app:srcCompat="@drawable/imgpeople" />

                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="8"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/quiz.lblQuiz1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/margin_m"
                            android:layout_weight="7"
                            android:text="@string/question1"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/colorTextQuiz"
                            android:textSize="@dimen/letter_m" />

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="match_parent">

                            <Spinner
                                android:id="@+id/quiz.spnAnswer1"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/spinner_height"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:background="@color/colorSpinner"
                                android:entries="@array/numbers"/>
                        </FrameLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_xs"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2">

                        <ImageView
                            android:layout_width="@dimen/image_height"
                            android:layout_height="@dimen/image_height"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/margin_xs"
                            app:srcCompat="@drawable/sanitario_form" />

                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="8"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/quiz.lblQuiz2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/margin_m"
                            android:layout_weight="7"
                            android:text="@string/question2"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/colorTextQuiz"
                            android:textSize="@dimen/letter_m" />

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="match_parent">

                            <Spinner
                                android:id="@+id/quiz.spnAnswer2"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/spinner_height"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:background="@color/colorSpinner"
                                android:entries="@array/numbers"/>
                        </FrameLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_xs"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2">

                        <ImageView
                            android:layout_width="@dimen/image_height"
                            android:layout_height="@dimen/image_height"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/margin_xs"
                            app:srcCompat="@drawable/imgducha" />

                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="8"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/quiz.lblQuiz3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/margin_m"
                            android:layout_weight="7"
                            android:text="@string/question3"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/colorTextQuiz"
                            android:textSize="@dimen/letter_m" />

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="match_parent">

                            <Spinner
                                android:id="@+id/quiz.spnAnswer3"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/spinner_height"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:background="@color/colorSpinner"
                                android:entries="@array/answer_3"/>
                        </FrameLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_xs"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2">

                        <ImageView
                            android:layout_width="@dimen/image_height"
                            android:layout_height="@dimen/image_height"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/margin_xs"
                            app:srcCompat="@drawable/imglavavajillas" />

                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="8"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/quiz.lblQuiz4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/margin_m"
                            android:layout_weight="7"
                            android:text="@string/question4"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/colorTextQuiz"
                            android:textSize="@dimen/letter_m" />

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="match_parent">

                            <Switch
                                android:id="@+id/quiz.switchQuiz4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textSize="@dimen/letter_m"
                                android:textStyle="bold"
                                android:textColor="@color/colorTextQuiz"
                                android:layout_gravity="center"
                                android:text="SI "/>

                        </FrameLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_xs"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2">

                        <ImageView
                            android:layout_width="@dimen/image_height"
                            android:layout_height="@dimen/image_height"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/margin_xs"
                            app:srcCompat="@drawable/imgcoche" />

                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="8"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/quiz.lblQuiz5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/margin_m"
                            android:layout_weight="7"
                            android:text="@string/question5"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/colorTextQuiz"
                            android:textSize="@dimen/letter_m" />

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="match_parent">

                            <Spinner
                                android:id="@+id/quiz.spnAnswer5"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/spinner_height"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:background="@color/colorSpinner"
                                android:entries="@array/answer_5"/>
                        </FrameLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_xs"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2">

                        <ImageView
                            android:layout_width="@dimen/image_height"
                            android:layout_height="@dimen/image_height"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/margin_xs"
                            app:srcCompat="@drawable/imglavadora" />

                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="8"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/quiz.lblQuiz6"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/margin_m"
                            android:layout_weight="7"
                            android:text="@string/question6"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/colorTextQuiz"
                            android:textSize="@dimen/letter_m" />

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="match_parent">

                            <Switch
                                android:id="@+id/quiz.switchQuiz6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textSize="@dimen/letter_m"
                                android:textStyle="bold"
                                android:textColor="@color/colorTextQuiz"
                                android:layout_gravity="center"
                                android:text="SI "/>

                        </FrameLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_xs"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2">

                        <ImageView
                            android:layout_width="@dimen/image_height"
                            android:layout_height="@dimen/image_height"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/margin_xs"
                            app:srcCompat="@drawable/imgjardin" />

                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/quiz.lblQuiz7"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/margin_m"
                            android:layout_weight="7"
                            android:text="@string/question1"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/colorTextQuiz"
                            android:textSize="@dimen/letter_m" />

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3">

                            <Spinner
                                android:id="@+id/quiz.spnAnswer7"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/spinner_height"
                                android:layout_gravity="center"
                                android:background="@color/colorSpinner"
                                android:entries="@array/answer_7"
                                android:gravity="center" />
                        </FrameLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/quiz.btnSave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/button_save"
                android:textColor="@color/colorTextQuiz"
                android:textStyle="bold"
                android:theme="@style/Login_btnRegistrer"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
